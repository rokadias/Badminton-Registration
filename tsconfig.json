{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "sourceRoot": "src",
    "alwaysStrict": true,
    "lib": ["dom", "es6", "es7"],
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
